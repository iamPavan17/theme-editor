{
	"name": "theme-editor",
	"displayName": "Theme Editor",
	"publisher": "imPavan",
	"description": "To customise a vs code theme with preview",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.60.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/imPavan17/theme-editor"
	},
	"icon": "media/icon.png",
	"categories": [
		"Themes",
		"Other"
	],
	"keywords": ["theme", "theme editor", "theme-customiser"],
	"activationEvents": [
		"onView:theme-editor-sidebar",
		"onCommand:theme-editor.open"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "theme-editor-sidebar-view",
					"title": "Theme Editor",
					"icon": "media/color-symbol.svg"
				}
			]
		},
		"views": {
			"theme-editor-sidebar-view": [
				{
					"type": "webview",
					"id": "theme-editor-sidebar",
					"name": "Theme Editor",
					"icon": "media/color-symbol.svg",
					"contextualTitle": "Theme Editor"
				}
			]
		},
		"commands": [
			{
				"command": "theme-editor.open",
				"title": "Open Theme Editor",
				"category": "Theme Editor"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "rollup -c && webpack --mode production",
		"lint": "eslint src --ext ts",
		"watch": "concurrently \"rollup -c -w\" \"webpack --mode development --watch\"",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	  },
	"devDependencies": {
		"@rollup/plugin-commonjs": "^20.0.0",
		"@rollup/plugin-node-resolve": "^13.0.4",
		"@rollup/plugin-typescript": "^8.2.5",
		"@tsconfig/svelte": "^2.0.1",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.60.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"concurrently": "^6.2.1",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"rollup": "^2.3.4",
		"rollup-plugin-svelte": "^6.0.0",
		"rollup-plugin-terser": "^7.0.2",
		"svelte": "^3.42.5",
		"svelte-check": "^2.2.5",
		"svelte-preprocess": "^4.9.4",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}
